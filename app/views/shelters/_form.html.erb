<%= form_with(model: shelter, local: true) do |f| %>
  <% if shelter.errors.any? %>
    <div>
      <h2><%= pluralize(shelter.errors.count, "error") %> prohibited this shelter from being saved:</h2>

      <ul>
        <% shelter.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>


  <fieldset>
    <%= f.label :accepting %>
    <%= f.check_box :accepting %>

    <%= f.label :shelter %>
    <%= f.text_field :shelter, :required => true %>

    <%= f.label :address %>
    <%= f.text_field :address, :required => true, class: 'autocomplete-field' %>

    <%= f.label :city %>
    <%= f.text_field :city %>

    <%= f.label :county %>
    <%= f.text_field :county %>

    <%= f.label :state %>
    <%= f.text_field :state %>

    <%= f.label :zip %>
    <%= f.text_field :zip %>

    <%= f.hidden_field :google_place_id %>

    <%= f.label :source %>
    <%= f.text_field :source %>

    <%= f.label :phone %>
    <%= f.text_field :phone, :required => true %>

    <%= f.label :allow_pets %>
    <%= f.check_box :allow_pets %>

    <%= f.label :pets %>
    <%= f.text_area :pets %>

    <%= f.label :supply_needs %>
    <%= f.text_area :supply_needs %>

    <%= f.label :volunteer_needs %>
    <%= f.text_area :volunteer_needs %>

    <%= f.label :notes %>
    <%= f.text_area :notes %>

    <%= f.label :distribution_center %>
    <%= f.text_field :distribution_center %>

    <%= f.label :food_pantry %>
    <%= f.text_field :food_pantry %>

    <%= f.label :special_needs %>
    <%= f.check_box :special_needs %>

    <%= f.label :latitude, "Latitude (optional)" %>
    <%= f.text_field :latitude %>

    <%= f.label :longitude, "Longitude (optional)" %>
    <%= f.text_field :longitude %>

    <% if user_signed_in? && current_user.admin? %>
      <%= f.label :private_notes %>
      <%= f.text_area :private_notes %>

      <%= f.label :private_email %>
      <%= f.text_field :private_email %>
    <% end %>

    <%= f.button :submit %>
  </fieldset>
<% end %>
